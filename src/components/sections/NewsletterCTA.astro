---
// Pre-Footer Newsletter CTA section - matching Figma exactly
import NewsletterEmailSignup from '../NewsletterEmailSignup.jsx';
---

<section 
  class="w-full h-[277px] overflow-hidden flex justify-center items-center"
  style={{
    backgroundImage: `url('/images/PrefooterBackgroundMush.png')`,
    backgroundSize: 'cover',
    backgroundPosition: '50% 50%',
    backgroundColor: '#fbf5f5'
  }}
>
  <div class="flex-1 max-w-[1100px] px-8 lg:px-10 py-8 lg:py-10 overflow-hidden flex flex-col justify-start items-start gap-2.5">
    <div class="w-full p-4 overflow-hidden flex flex-col justify-center items-center">
      <div class="w-full p-4 overflow-hidden flex flex-col justify-center items-center gap-1">
        <!-- Main Headline -->
        <h2 class="text-center text-au-chico-50 text-[32px] font-pangaia italic font-medium">
          Become an Insider
        </h2>
        <!-- Subtitle -->
        <p class="text-center text-au-chico-50 text-base font-inter font-normal leading-6">
          Stay in the loop on the latest updates.
        </p>
      </div>
      
      <!-- Email Signup Form -->
      <NewsletterEmailSignup client:load />
    </div>
  </div>
</section>