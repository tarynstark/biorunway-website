---
// Advisory Board section - 2-column layout matching Figma exactly
const base = import.meta.env.BASE_URL;

// Advisory Board data - real names from Figma
const advisors = [
  {
    name: "Jos√© Miguel Laplaza, PhD"
  },
  {
    name: "Evelyn Rynkiewicz"
  }
];
---

<section class="w-full overflow-hidden flex justify-center items-center">
  <div class="flex-1 max-w-[1100px] pb-16 px-10 overflow-hidden flex flex-col justify-start items-start gap-4">
    <!-- Section Header -->
    <div class="px-4 flex justify-center items-center gap-2.5">
      <h2 class="text-au-chico-700 text-[24px] font-pangaia font-medium leading-8">
        Advisory Board
      </h2>
    </div>

    <!-- Advisory Board Grid -->
    <div class="w-full p-4 flex flex-col md:flex-row justify-center items-center gap-6">
      {advisors.map((advisor, index) => (
        <div class="w-full md:flex-1 bg-porsche-200 border border-porsche-200 rounded-2xl overflow-hidden flex flex-col justify-center items-start">
          <!-- Advisor Image -->
          <div class="w-full h-[200px] relative bg-gray-300">
            <!-- Gray placeholder background -->
            <div class="w-full h-full bg-[#ECECEC]"></div>
          </div>
          
          <!-- Advisor Info -->
          <div class="w-full px-5 py-6 bg-white overflow-hidden flex flex-col justify-start items-start gap-2">
            <div class="w-full text-porsche-950 text-lg font-inter font-medium leading-[26px]">
              {advisor.name}
            </div>
            <div class="w-full text-porsche-700 text-base font-sf-pro-rounded font-medium leading-6">
              Read More
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>