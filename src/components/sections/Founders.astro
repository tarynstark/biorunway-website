---
// Founders showcase section with 4-column grid layout
const base = import.meta.env.BASE_URL;

// Founders data - including Taryn Stark as specified in the ticket
const founders = [
  {
    name: "Taryn Stark",
    title: "Co-Founder & Head of Design",
    bio: "Design leader with extensive experience in technology and systems thinking. Previously Head of Design at a major tech company, now focused on the intersection of biotech and fashion.",
    image: "/images/founders/taryn-stark.jpg" // Placeholder for now
  },
  {
    name: "Dr. Sarah Chen",
    title: "Co-Founder & Scientific Director", 
    bio: "Biotechnology researcher with 15+ years in biomaterials development. Former research director at leading biotech companies.",
    image: "/images/founders/sarah-chen.jpg" // Placeholder for now
  },
  {
    name: "Marcus Rodriguez",
    title: "Co-Founder & Industry Relations",
    bio: "Fashion industry veteran with deep connections across sustainable fashion initiatives and emerging technology adoption.",
    image: "/images/founders/marcus-rodriguez.jpg" // Placeholder for now
  },
  {
    name: "Dr. Aisha Patel",
    title: "Co-Founder & Research Lead",
    bio: "Materials scientist specializing in bio-based textiles and sustainable manufacturing processes in the fashion industry.",
    image: "/images/founders/aisha-patel.jpg" // Placeholder for now
  }
];
---

<section class="w-full py-16 bg-white">
  <div class="max-w-[1100px] mx-auto px-10">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-au-chico-900 text-[32px] font-pangaia font-medium leading-10 mb-4">
        Meet the Founders
      </h2>
      <p class="text-porsche-950 text-base font-light leading-7 max-w-[600px] mx-auto">
        The minds behind BioRunway bring together expertise from design, science, and fashion to explore the future of biotechnology in fashion.
      </p>
    </div>

    <!-- Founders Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {founders.map((founder, index) => (
        <div class="group">
          <div class="bg-white border border-porsche-200 rounded-[20px] overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-2">
            <!-- Founder Image -->
            <div class="aspect-square bg-porsche-300 relative overflow-hidden">
              <!-- Placeholder background color until real images are added -->
              <div class="absolute inset-0 bg-gradient-to-br from-porsche-200 to-porsche-400"></div>
              <!-- 
              <img 
                src={`${base.endsWith('/') ? base : base + '/'}${founder.image.replace(/^\//, '')}`}
                alt={founder.name}
                class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
              -->
              <!-- Placeholder initials overlay -->
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-white text-3xl font-pangaia font-medium">
                  {founder.name.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
            </div>
            
            <!-- Founder Info -->
            <div class="p-6">
              <h3 class="text-au-chico-900 text-lg font-pangaia font-medium leading-6 mb-2">
                {founder.name}
              </h3>
              <p class="text-porsche-700 text-sm font-medium mb-3">
                {founder.title}
              </p>
              <p class="text-porsche-950 text-sm font-light leading-5">
                {founder.bio}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>