---
// Founders showcase section - updated to match Figma exactly
const base = import.meta.env.BASE_URL;

// Founders data - real names from Figma
const founders = [
  {
    name: "Joanna Bundus, PhD",
    image: "https://placehold.co/229x200"
  },
  {
    name: "Aleksandra Masionis", 
    image: "https://placehold.co/229x200"
  },
  {
    name: "Caitlin Nobes",
    image: "https://placehold.co/229x200"
  },
  {
    name: "Taryn Stark",
    image: null // No image, just placeholder background
  }
];
---

<section class="w-full overflow-hidden flex justify-center items-center">
  <div class="flex-1 max-w-[1100px] pt-12 lg:pt-16 pb-6 lg:pb-8 px-8 lg:px-10 overflow-hidden flex flex-col justify-start items-start gap-4">
    <!-- Section Header -->
    <div class="px-4 flex justify-center items-center gap-2.5">
      <h2 class="text-au-chico-900 text-[32px] font-pangaia font-medium leading-10">
        Founders
      </h2>
    </div>

    <!-- Founders Grid -->
    <div class="w-full p-4 flex flex-col md:flex-row justify-center items-center gap-6">
      {founders.map((founder, index) => (
        <div class="w-full md:flex-1 bg-porsche-100 border border-porsche-200 rounded-2xl overflow-hidden flex flex-col justify-center items-start">
          <!-- Founder Image -->
          <div class="w-full h-[200px] relative bg-porsche-300">
            {founder.image ? (
              <img 
                src={founder.image}
                alt={founder.name}
                class="w-full h-full object-cover"
              />
            ) : (
              <!-- Solid background for Taryn Stark -->
              <div class="w-full h-full bg-porsche-300"></div>
            )}
          </div>
          
          <!-- Founder Info -->
          <div class="w-full px-5 py-6 bg-white overflow-hidden flex flex-col justify-start items-start gap-1">
            <div class="w-full text-porsche-950 text-base font-inter font-medium leading-[26px]">
              {founder.name}
            </div>
            <div class="w-full text-porsche-700 text-base font-sf-pro-rounded font-medium leading-6">
              Read More
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>