---
// Hero component with complex background and email signup integration
import HeroEmailSignup from '../HeroEmailSignup.jsx';
const base = import.meta.env.BASE_URL;
---

<section 
  class="w-full h-full shadow-[0px_4px_4px_rgba(0,0,0,0.25)] overflow-hidden justify-center items-center gap-2.5 inline-flex"
  style={{
    backgroundImage: `url('${base.endsWith('/') ? base : base + '/'}images/HeroBackgorundBioYarn.png')`,
    backgroundSize: 'cover',
    backgroundPosition: '50% 50%',
    backgroundColor: '#371A1E',
    height: '640px'
  }}
>
  <div class="flex-1 max-w-[1100px] px-10 py-40 overflow-hidden flex-col justify-start items-start gap-2.5 inline-flex">
    <div class="self-stretch p-4 overflow-hidden flex-col justify-center items-center flex">
      <div class="self-stretch p-4 overflow-hidden flex-col justify-center items-center flex">
        <!-- Main Headline -->
        <h1 class="self-stretch text-center text-au-chico-50 text-[44px] md:text-[48px] font-pangaia italic font-light leading-[60px] md:leading-[54px] mb-2.5">
          Illuminating the<br />Fabrics of Change
        </h1>
        <!-- Subtitle -->
        <p class="w-full max-w-[560px] text-center text-white text-[18px] font-inter font-light leading-[22px]">
          The past, present, and future of biotech and fashion.
        </p>
      </div>
      
      <!-- Email Signup Form -->
      <HeroEmailSignup client:load />
    </div>
  </div>
</section>