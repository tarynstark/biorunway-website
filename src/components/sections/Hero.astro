---
// Hero component with complex background and email signup integration
import HeroEmailSignup from '../HeroEmailSignup.jsx';
const base = import.meta.env.BASE_URL;
---

<section 
  class="w-full h-full shadow-[0px_4px_4px_rgba(0,0,0,0.25)] overflow-hidden justify-center items-center gap-2.5 inline-flex"
  style={{
    background: 'linear-gradient(0deg, #8C444C 0%, #8C444C 100%), var(--color-au-chico-950, #371A1E)',
    backgroundBlendMode: 'soft-light, color, normal, normal',
    backgroundImage: `url('${base.endsWith('/') ? base : base + '/'}images/biorunway-fabrics-hero-splash.png')`,
    height: '640px'
  }}
>
  <div class="flex-1 max-w-[1100px] px-10 py-40 overflow-hidden flex-col justify-start items-start gap-2.5 inline-flex">
    <div class="self-stretch p-4 overflow-hidden flex-col justify-center items-center flex">
      <div class="self-stretch p-4 overflow-hidden flex-col justify-center items-center flex">
        <!-- Main Headline -->
        <h1 class="self-stretch text-center text-au-chico-50 text-[48px] font-['PP_Pangaia'] italic font-light">
          Illuminating the Fabrics of Change
        </h1>
        <!-- Subtitle -->
        <p class="w-full max-w-[560px] text-center text-white text-[18px] font-['Inter'] font-medium leading-6">
          The past, present, and future of biotech and fashion.
        </p>
      </div>
      
      <!-- Email Signup Form -->
      <HeroEmailSignup client:load />
    </div>
  </div>
</section>