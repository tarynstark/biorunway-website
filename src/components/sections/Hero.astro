---
// Hero component with complex background and email signup integration
import HeroEmailSignup from '../HeroEmailSignup.jsx';
const base = import.meta.env.BASE_URL;
---

<section 
  class="w-full h-full shadow-[0px_4px_4px_rgba(0,0,0,0.25)] overflow-hidden justify-center items-center gap-2.5 inline-flex relative"
  style={{
    backgroundColor: '#371A1E',
    height: '640px'
  }}
>
  <!-- Background Image Layer -->
  <div 
    class="absolute inset-0 w-full h-full"
    style={{
      backgroundImage: `url('${base.endsWith('/') ? base : base + '/'}images/biorunway-fabrics-hero-splash.png')`,
      backgroundSize: 'cover',
      backgroundPosition: '50% 50%',
      opacity: 1
    }}
  ></div>
  
  <!-- Color Overlay Layer -->
  <div 
    class="absolute inset-0 w-full h-full"
    style={{
      backgroundColor: '#8C444C',
      mixBlendMode: 'soft-light',
      opacity: 0.8
    }}
  ></div>
  
  <!-- Additional Red Overlay for more intensity -->
  <div 
    class="absolute inset-0 w-full h-full"
    style={{
      backgroundColor: '#46040c',
      mixBlendMode: 'hard-light',
      opacity: 0.4
    }}
  ></div>

  <div class="flex-1 max-w-[1100px] px-10 py-40 overflow-hidden flex-col justify-start items-start gap-2.5 inline-flex relative z-10">
    <div class="self-stretch p-4 overflow-hidden flex-col justify-center items-center flex">
      <div class="self-stretch p-4 overflow-hidden flex-col justify-center items-center flex">
        <!-- Main Headline -->
        <h1 class="self-stretch text-center text-au-chico-50 text-[48px] font-pangaia italic font-light">
          Illuminating the Fabrics of Change
        </h1>
        <!-- Subtitle -->
        <p class="w-full max-w-[560px] text-center text-white text-[18px] font-medium leading-6">
          The past, present, and future of biotech and fashion.
        </p>
      </div>
      
      <!-- Email Signup Form -->
      <HeroEmailSignup client:load />
    </div>
  </div>
</section>