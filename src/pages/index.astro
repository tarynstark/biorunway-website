---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import About from '../components/sections/About.astro';
import LatestArticles from '../components/sections/LatestArticles.astro';
import Founders from '../components/sections/Founders.astro';
import AdvisoryBoard from '../components/sections/AdvisoryBoard.astro';
import NewsletterCTA from '../components/sections/NewsletterCTA.astro';
---

<BaseLayout 
  title="BioRunway | Products, partnerships, sustainability, R&D, investment news" 
  description="Get information and in-depth news on biotech and fashion emergence."
>
  <Hero />
  <About />
  <LatestArticles />
  <!-- Combined Founders and Advisory Board section with shared background -->
  <div style="background: radial-gradient(ellipse 141.42% 161.66% at -0.00% 100.00%, white 0%, rgba(255, 255, 255, 0.90) 70%, rgba(255, 255, 255, 0) 100%);">
    <Founders />
    <AdvisoryBoard />
  </div>
  <NewsletterCTA />
</BaseLayout>
