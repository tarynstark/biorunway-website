---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterCTA from '../components/sections/NewsletterCTA.astro';
---

<BaseLayout title="Contact - BioRunway">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-brand-main-burgundy mb-6">Get in Touch</h1>
        <p class="text-xl text-biorunway-700 max-w-3xl mx-auto leading-relaxed">
          BioRunway is your trusted source on the latest in biotech and fashion
        </p>
      </div>

      <!-- Contact Information -->
      <section class="mb-16">
        <div class="grid md:grid-cols-3 gap-8">
          
          <!-- Editorial Contact -->
          <div class="text-center p-6 bg-brand-light rounded-lg border border-biorunway-200">
            <div class="w-16 h-16 bg-brand-main-burgundy rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-brand-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-biorunway-900 mb-3">Editorial</h3>
            <p class="text-biorunway-600 mb-4 text-sm">Story pitches, press releases, and editorial inquiries</p>
            <a href="mailto:editorial@biorunway.com" class="text-brand-main-burgundy hover:text-burgundy-700 font-semibold transition-colors">
              editorial@biorunway.com
            </a>
          </div>

          <!-- Advertising Contact -->
          <div class="text-center p-6 bg-brand-light rounded-lg border border-biorunway-200">
            <div class="w-16 h-16 bg-brand-main-mustard rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-brand-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-biorunway-900 mb-3">Advertising</h3>
            <p class="text-biorunway-600 mb-4 text-sm">Partnership opportunities and advertising inquiries</p>
            <a href="mailto:advertise@biorunway.com" class="text-brand-main-burgundy hover:text-burgundy-700 font-semibold transition-colors">
              advertise@biorunway.com
            </a>
          </div>

          <!-- General Contact -->
          <div class="text-center p-6 bg-brand-light rounded-lg border border-biorunway-200">
            <div class="w-16 h-16 bg-brand-main-olive rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-brand-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-biorunway-900 mb-3">General</h3>
            <p class="text-biorunway-600 mb-4 text-sm">General inquiries and other questions</p>
            <a href="mailto:info@biorunway.com" class="text-brand-main-burgundy hover:text-burgundy-700 font-semibold transition-colors">
              info@biorunway.com
            </a>
          </div>

        </div>
      </section>

      <!-- Response Time -->
      <section class="text-center mb-16">
        <div class="bg-biorunway-50 p-8 rounded-lg">
          <h2 class="text-2xl font-bold text-biorunway-900 mb-4">Response Time</h2>
          <p class="text-biorunway-700 max-w-2xl mx-auto">
            We aim to respond to all inquiries within 48 hours during business days. For time-sensitive editorial matters, please indicate urgency in your subject line.
          </p>
        </div>
      </section>

    </div>
  </div>

  <!-- Newsletter Signup -->
  <NewsletterCTA />
</BaseLayout>